<h1>Students#new</h1>
<%= form_with(model: @student, url: students_path, class: "form") do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %><br/>
    <%= form.text_field :name, class: "form-control" %><br/>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %><br/>
    <%= form.text_field :email, class: "form-control" %><br/>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: "form-label" %><br/>
    <%= form.password_field :password, class: "form-control" %><br/>
  </div>

  <div class="mb-3">
    <%= form.label :college_id, class: "form-label" %><br/>
    <%= form.select :college_id, options_for_select(colleges_for_select), { include_blank: true }, class: "form-select" %><br/>
  </div>

  <div class="mb-3">
    <%= form.label :department_id, class: "form-label" %><br/>
    <%= form.select :department_id, options_for_select(departments_for_select), { include_blank: true }, class: "form-select" %><br/>
  </div>

  <div class="mb-3">
    <%= form.label :semester_id, class: "form-label" %><br/>
    <%= form.select :semester_id, options_for_select(semesters_for_select), { include_blank: true }, class: "form-select" %><br/>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
