<h1>Students#new</h1>
<p>Find me in app/views/students/new.html.erb</p>
<%= form_with(model: @student, url: students_path) do |form| %>
  <%= form.label :name %><br/>
  <%= form.text_field :name %><br/>

  <%= form.label :email %><br/>
  <%= form.text_field :email %><br/>

  <%= form.label :password %><br/>
  <%= form.text_field :password %><br/>

  <%= form.label :college_id %><br/>
  <%= form.select :college_id, options_for_select(colleges_for_select),include_blank: true %><br/>

  <%= form.label :department_id %><br/>
  <%= form.select :department_id, options_for_select(departments_for_select),include_blank: true %><br/>

  <%= form.label :semester_id %><br/>
  <%= form.select :semester_id, options_for_select(semesters_for_select),include_blank: true %><br/>

  <%= form.submit %>
<% end %>