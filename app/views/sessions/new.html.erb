
<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container" id="loginId">
<main class="form-signin">
  <%= form_with(url: login_path,local: true) do |form| %>
    <% if flash.now[:alert] %>
      <div class="alert alert-danger">
        <%= flash.now[:alert] %>
      </div>
    <% end %>

    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <%= form.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <%= form.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <label for="floatingPassword">Password</label>
    </div>

    <%= form.submit "Sign in", class: "w-100 btn btn-lg btn-primary" %>
  <% end %>
</main>
</div>
