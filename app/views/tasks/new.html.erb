<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>
<%= form_with(model: @task, url: tasks_path) do |form| %>

  <%= form.label :course_id %><br/>
  <%= form.select :course_id, options_for_select(courses_for_select),include_blank: true %><br/>

  <%= form.label :department_id %><br/>
  <%= form.select :department_id, options_for_select(departments_for_select),include_blank: true %><br/>

  <%= form.label :instructor_id %><br/>
  <%= form.select :instructor_id, options_for_select(instructors_for_select),include_blank: true %><br/>


  <%= form.label :semester_id %><br/>
  <%= form.select :semester_id, options_for_select(semesters_for_select),include_blank: true %><br/>

  <%= form.label :active %><br/>
  <%= form.check_box  :active, checked: true %>
<div class="field">
    <%= form.label :start_eval,"Start evaluation" %>
    <%= form.check_box :start_eval %>
  </div>
  <div class="field">

  <%= form.label :student_ids, 'Students' %>
  <%= form.collection_check_boxes :student_ids, Student.all, :id, :name do |b| %>
    <div class="checkbox">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>
  </div>

  <%= form.submit %>
<% end %>