<div class="container">
  <h1>EvaluationForms#index</h1>
   <%= link_to "New evaluation_form", new_evaluation_form_path, class: "btn btn-success float-end " %> 
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Evaluation Form for</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @evaluation_forms.each do |evaluation_form| %>
      <tr>        <td><%= evaluation_form.evaluator %></td>
        <td>
          <%= link_to "Show", evaluation_form_path(evaluation_form), class: "btn btn-primary me-2" %>
          <%= link_to "Edit", edit_evaluation_form_path(evaluation_form), class: "btn btn-primary me-2" %>
          <%= link_to "Delete", evaluation_form_path(evaluation_form), method: :delete, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
