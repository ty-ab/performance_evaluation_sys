<table class="table">
  <thead>
    <tr>
      <th>Instructor</th>
      <th>Course</th>
      <th>Department</th>
      <th>Semester</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if @tasks.present? %>
    <% @tasks.each do |task| %>
    <% if current_user.college == task.instructor.college && task.start_eval %>
    <tr>
      <td><%= task.instructor.name %></td>
      <td><%= task.course.course_name %></td>
      <td><%= task.department.dep_name %></td>
      <td><%= task.semester.sem %></td>
      <td><%= link_to "Evaluate", evaluate_task_path(task), class: "btn btn-primary" %>
      </td>
    </tr>

    <% else %>
      <tr>
      <td><%= task.instructor.name %></td>
      <td><%= task.course.course_name %></td>
      <td><%= task.department.dep_name %></td>
      <td><%= task.semester.sem %></td>
      <td><%= link_to "Evaluate", evaluate_task_path(task), class: "btn btn-primary disabled" %>
      </td>
    </tr>
    <% end %>
    <% end %>
    <% else %>
      <%= render partial: 'no_task' %>
    <% end %>
  </tbody>
</table>