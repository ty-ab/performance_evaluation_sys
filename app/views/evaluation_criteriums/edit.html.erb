<h1>EvaluationCriteriums#edit</h1>
<%= form_with(model: @evaluation_criterium, url: evaluation_criterium_path(@evaluation_criterium), method: :put) do |form| %>
  <div class="mb-3">
    <%= form.label :criteria, class: "form-label" %><br/>
    <%= form.text_field :criteria, value: @evaluation_criterium.criteria, class: "form-control" %><br/>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %><br/>
    <%= form.text_field :description, value: @evaluation_criterium.description, class: "form-control" %><br/>
  </div>

  <br/><br/>
  <%= form.submit class: "btn btn-primary" %>
<% end %>
