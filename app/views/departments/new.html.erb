<h1>Departments#new</h1>
<%= form_with(model: @department, url: departments_path, class: "form") do |form| %>
  <div class="mb-3">
    <%= form.label :dep_name, class: "form-label" %><br/>
    <%= form.text_field :dep_name, class: "form-control" %><br/>
  </div>

  <div class="mb-3">
    <%= form.label :college_id, class: "form-label" %><br/>
    <%= form.select :college_id, options_for_select(colleges_for_select), { include_blank: true }, class: "form-select" %><br/>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
